{% extends 'DanUserBundle::layout.html.twig' %}
{% from '::flash.html.twig' import flash %}

{% block title %} Login {% endblock %}

{% block fos_user_content %}
    {% if error %}
        {{ flash('error', error|trans({}, 'FOSUserBundle'), true) }}
    {% endif %}
        <div class="page-center">
        <h4>Login</h4>
        <form action="{{ path("fos_user_security_check") }}" method="post" class="well">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div>
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div>
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="password" id="password" name="_password" required="required" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" /> 
                <small>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </small>
            </div>
            <div>
                <br/>
                <small>
                    Puoi anche autenticarti con: 
                    <div  style="text-align: center;">
                        <a alt="Login con Google" title="Login con Google" href="{{path('hwi_oauth_service_redirect', { service: 'google' })}}" class="icon-google"></a>
                        &nbsp;
                        <a alt="Login with Facebook" title="Login with Facebook" href="{{path('hwi_oauth_service_redirect', { service: 'facebook' })}}" class="icon-facebook"></a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                    Oppure puoi <a href="{{ path('fos_user_registration_register') }}" class="" >registrarti</a>.<br/> 
                    Hai <a href="{{ path('fos_user_resetting_request') }}">dimenticato la password</a>?
                </small>
            </div>
        </form>
            </div>
{% endblock %}